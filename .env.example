# ── App ─────────────────────────────────────────────────────────────────────────
STREAMLIT_SERVER_PORT=8501

# ── LLM provider ───────────────────────────────────────────────────────────────
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4o-mini
LLM_API_KEY=
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.1

# ── Qdrant ─────────────────────────────────────────────────────────────────────
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION=rag_rh_chunks

# ── Embeddings (for queries) ───────────────────────────────────────────────────
EMBEDDING_MODEL=BAAI/bge-m3

# ── Reranker (optional) ────────────────────────────────────────────────────────
USE_RERANK=false
RERANK_DEVICE=auto
RERANK_BATCH=16

# ── Logging (optional) ─────────────────────────────────────────────────────────
LOG_SEARCH_CSV=/app/logs/search_log.csv